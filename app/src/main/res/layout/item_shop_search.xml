<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_5">

    <LinearLayout
        android:id="@+id/rl_position_one"
        style="@style/layout_search_common"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shop_one"
            style="@style/image_search_common" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/ly_info_padding">

            <TextView
                android:id="@+id/tv_shop_name_one"
                style="@style/title_search_name"
                tools:text="Shop name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2">

                <TextView
                    android:id="@+id/tv_percent_one"
                    style="@style/title_search_percent"
                    tools:text="30%" />

                <LinearLayout
                    android:id="@+id/ll_distance_one"
                    style="@style/layout_text_search_common">

                    <ImageView
                        android:id="@+id/ic_marker1"
                        style="@style/image_search_marker" />

                    <TextView
                        android:id="@+id/tv_distance_one"
                        style="@style/text_search_distance"
                        tools:text="4 km" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_position_two"
        style="@style/layout_search_two_common">

        <ImageView
            android:id="@+id/iv_shop_two"
            style="@style/image_search_common" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ly_info_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_name_two"
                style="@style/title_search_name"
                tools:text="Shop name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2">

                <TextView
                    android:id="@+id/tv_percent_two"
                    style="@style/title_search_two_percent"
                    tools:text="30%" />

                <LinearLayout
                    android:id="@+id/ll_distance_two"
                    style="@style/layout_text_search_common">

                    <ImageView
                        android:id="@+id/ic_marker2"
                        style="@style/image_search_two_marker" />

                    <TextView
                        android:id="@+id/tv_distance_two"
                        style="@style/text_search_two_distance"
                        tools:text="4 km" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_position_three"
        style="@style/layout_search_common">

        <ImageView
            android:id="@+id/iv_shop_three"
            style="@style/image_search_common" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ly_info_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_name_three"
                style="@style/title_search_name"
                tools:text="Shop name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2">

                <TextView
                    android:id="@+id/tv_percent_three"
                    style="@style/title_search_percent"
                    tools:text="30%" />

                <LinearLayout
                    android:id="@+id/ll_distance_three"
                    style="@style/layout_text_search_common">

                    <ImageView
                        android:id="@+id/ic_marker3"
                        style="@style/image_search_marker" />

                    <TextView
                        android:id="@+id/tv_distance_three"
                        style="@style/text_search_distance"
                        tools:text="4 km" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
