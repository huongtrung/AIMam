<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <GridView
            android:id="@+id/grdImages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnWidth="@dimen/spacing_100"
            android:gravity="center"
            android:horizontalSpacing="@dimen/spacing_5"
            android:numColumns="auto_fit"
            android:padding="@dimen/spacing_5"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/spacing_5" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="@dimen/spacing_120"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5"
            android:layout_marginBottom="@dimen/spacing_5"
            android:background="@drawable/bg_unsubscribe_selector"
            android:text="@string/title_select"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>