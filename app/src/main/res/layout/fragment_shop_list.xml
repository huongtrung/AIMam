<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_5">

    <vn.gmorunsystem.aimam.ui.customview.ShopHomeItemView
        android:id="@+id/rl_position_one"
        style="@style/layout_shop_common"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shop_one"
            style="@style/image_shop_common" />

        <LinearLayout
            style="@style/ly_info_padding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_name_one"
                style="@style/title_shop_name"
                tools:text="Shop name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2">

                <TextView
                    android:id="@+id/tv_percent_one"
                    style="@style/title_shop_percent"
                    tools:text="30%" />

                <LinearLayout
                    android:id="@+id/ll_distance_one"
                    style="@style/layout_text_shop_common">

                    <ImageView
                        android:id="@+id/ic_marker1"
                        style="@style/image_shop_marker" />

                    <TextView
                        android:id="@+id/tv_distance_one"
                        style="@style/text_shop_distance"
                        tools:text="4 km" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </vn.gmorunsystem.aimam.ui.customview.ShopHomeItemView>

    <vn.gmorunsystem.aimam.ui.customview.ShopHomeItemView
        android:id="@+id/rl_position_two"
        style="@style/layout_shop_two_common">

        <ImageView
            android:id="@+id/iv_shop_two"
            style="@style/image_shop_common" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            style="@style/ly_info_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_name_two"
                style="@style/title_shop_name"
                tools:text="Shop name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2">

                <TextView
                    android:id="@+id/tv_percent_two"
                    style="@style/title_shop_two_percent"
                    tools:text="30%" />

                <LinearLayout
                    android:id="@+id/ll_distance_two"
                    style="@style/layout_text_shop_common">

                    <ImageView
                        android:id="@+id/ic_marker2"
                        style="@style/image_shop_two_marker" />

                    <TextView
                        android:id="@+id/tv_distance_two"
                        style="@style/text_shop_two_distance"
                        tools:text="4 km" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </vn.gmorunsystem.aimam.ui.customview.ShopHomeItemView>

    <vn.gmorunsystem.aimam.ui.customview.ShopHomeItemView
        android:id="@+id/rl_position_three"
        style="@style/layout_shop_common">

        <ImageView
            android:id="@+id/iv_shop_three"
            style="@style/image_shop_common" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            style="@style/ly_info_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_name_three"
                style="@style/title_shop_name"
                tools:text="Shop name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2">

                <TextView
                    android:id="@+id/tv_percent_three"
                    style="@style/title_shop_percent"
                    tools:text="30%" />

                <LinearLayout
                    android:id="@+id/ll_distance_three"
                    style="@style/layout_text_shop_common">

                    <ImageView
                        android:id="@+id/ic_marker3"
                        style="@style/image_shop_marker" />

                    <TextView
                        android:id="@+id/tv_distance_three"
                        style="@style/text_shop_distance"
                        tools:text="4 km" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </vn.gmorunsystem.aimam.ui.customview.ShopHomeItemView>
</LinearLayout>
