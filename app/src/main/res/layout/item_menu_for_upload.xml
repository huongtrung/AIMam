<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_menu_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_shop_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/shop_menu_item_margin"
        android:textColor="@color/color_black"
        android:textSize="@dimen/shop_menu_item_text_size"
        android:layout_marginTop="@dimen/shop_menu_item_margin"
        android:layout_marginBottom="@dimen/shop_menu_item_margin"
        tools:text="Item name" />

    <View style="@style/item_divider" />

</LinearLayout>