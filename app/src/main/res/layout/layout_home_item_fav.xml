<?xml version="1.0" encoding="utf-8"?>
<vn.gmorunsystem.aimam.ui.customview.HomeFavouriteItemView xmlns:android="http://schemas.android.com/apk/res/android"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="match_parent"
                                                           android:layout_margin="@dimen/spacing_4"
                                                           android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_fav_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_img1" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_15"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/black_opacity"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingLeft="@dimen/spacing_2"
        android:paddingRight="@dimen/spacing_2"
        android:text="AAAAA"
        android:textAlignment="center"
        android:textColor="@color/color_green"
        android:textSize="@dimen/tv_home_fav_item_size" />
</vn.gmorunsystem.aimam.ui.customview.HomeFavouriteItemView>